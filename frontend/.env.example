# Mapbox Configuration
# 請將您的 Mapbox Public Access Token 填入下方
VITE_MAPBOX_ACCESS_PUBLIC_TOKEN=xxx

# Backend API Configuration
# 後端 API 基礎 URL
VITE_API_BASE_URL=http://localhost:8000/api

# 注意：TILESET_ID 現在放在後端環境變數中，前端不需要設定

# Mapbox Style URL (可選，預設使用 mapbox://styles/mapbox/streets-v12)
VITE_MAPBOX_STYLE_URL=mapbox://styles/mapbox/standard

# 地圖初始位置設定 (台北市中心)
VITE_MAP_INITIAL_LONGITUDE=121.5654
VITE_MAP_INITIAL_LATITUDE=25.0330
VITE_MAP_INITIAL_ZOOM=12
VITE_MAP_INITIAL_PITCH=45
VITE_MAP_INITIAL_BEARING=0